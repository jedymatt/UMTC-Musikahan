---
import Layout from "../layouts/Layout.astro";

const day1 = {
    morning: [
        {
            time: "9AM",
            events: [
                "Musikahan Goes Digital",
                "",
                "Master Class on Philippine Theater for Grades 7 & 8 with Nestor Horfilla",
            ],
        },
    ],
};
---

<Layout title="News">
    <main>
        <div class="min-h-screen">  
            <div id="scrollbar" class="top-bar">
                <div style="display:flex; white-space:nowrap;">
                    <div class="top-button">&nbsp</div>
                    <div id="day1" onclick="scrollToDiv(1)" class="top-button">Day 1</div>
                    <div id="day2" onclick="scrollToDiv(2)" class="top-button">Day 2 </div>
                    <div id="day3" onclick="scrollToDiv(3)" class="top-button">Day 3</div>
                    <div id="day4" onclick="scrollToDiv(4)" class="top-button">Day 4</div>
                    <div class="top-button">&nbsp</div>
                </div>
            </div>

            <div class="content">
                <div id="day1-container" class="day-container">
                    
                </div>
                <div id="day2-container" class="day-container" style="display: none;">
                    
                </div>
                <div id="day3-container" class="day-container" style="display: none;">
                    
                </div>
                <div id="day4-container" class="day-container" style="display: none;">
                    
                </div>
            </div>

        </div>
        <div class="min-h-screen"></div>
        <div class="min-h-screen"></div>
    </main>
    <script lang="javascript">
        function right(){
            scrollToDiv("day2")
        }
        
        function scrollToDiv(day) {
            const container = document.getElementById('scrollbar');
            container.scrollTo({
                left: (container.scrollWidth / 6) * (day - 1),
                behavior: 'smooth'
            });
            adjustBackground(day)
            adjustContent(day)
        }
        function adjustBackground(day){
            var x = 100 - (100 / 3) * (day - 1)
            var y = (100 / 3) * (day - 1)
            const container = document.getElementById('scrollbar')
            container.style.transition = "background-position 1s ease-in-out"
            container.style.backgroundPosition = `${x}% ${y}%`
        }
        function adjustContent(day){
            document.getElementById("day1-container").style.display = "none"
            document.getElementById("day2-container").style.display = "none"
            document.getElementById("day3-container").style.display = "none"
            document.getElementById("day4-container").style.display = "none"

            document.getElementById(`day${day}-container`).style.display = "block"
        }
    </script>
</Layout>
<style lang="css">
    .top-bar{
        width: 100%;
        height: 80px;
        background-image: url("/assets/images/image_backgroundTheme.jpg");
        background-size: 150%;
        background-position: 100% 0;
        overflow-x: hidden;
    }
    .top-button{
        text-align: center;
        line-height: 70px;
        height: 80px;
        flex: 0 0 33%;
        cursor: pointer;
        color: white;
        font-size: 1.5rem;
    }
    .day-container{
        text-align: center;
        background-color: red;
    }
</style>